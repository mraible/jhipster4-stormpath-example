<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>

    <cache alias="com.stormpath.example.domain.User" uses-template="simple"/>

    <cache alias="com.stormpath.example.domain.Authority" uses-template="simple"/>

    <cache alias="com.stormpath.example.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.stormpath.example.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.stormpath.example.domain.User.persistentTokens" uses-template="simple"/>

    <!-- Stormpath cache entries -->
    <cache alias="com.stormpath.sdk.tenant.Tenant" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.application.Application" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.application.ApplicationAccountStoreMapping" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.application.webconfig.ApplicationWebConfig" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.directory.Directory" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.servlet.nonces" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.oauth.AccessToken" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.provider.Provider" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.account.Account" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.group.Group" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.group.GroupMembership" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.directory.CustomData" uses-template="simple"/>
    <cache alias="com.stormpath.sdk.oauth.RefreshToken" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
